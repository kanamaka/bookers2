<div class="book-body">
  <%= attachment_image_tag @book_image, :image %>
  <p>タイトル：<%= @book_image.book_name %></p>
  <p>あらすじ：<%= @book_image.caption %></p>
  <p>ユーザーネーム：<%= @book_image.user.name %></p>
  <p>投稿日時：<%= @book_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book_image.user == current_user %>
    <%= link_to "削除", book_image_path(@book_image), method: :delete %>
  <% end %>
</div>